---
import Layout from "../layouts/Layout.astro";
---

<Layout title="100">
    <main class="w-screen h-dvh flex items-center justify-center">
        <div class="overlay"></div>
        <div class="flex items-center justify-center flex-col lg:w-1/3 w-96">
            <div class="flex w-full translate-y-[1rem] font-bold text-4xl">
                <p class="">100</p>
            </div>
            <div
                class="w-full grid grid-cols-3 bg-[#f1f1ef] border border-black/50 p-4 text-black/50 relative z-10 text-sm gap-y-4 transition-colors shadow-lg"
            >
                <a href="/001" class="hover:text-black transition-colors"
                    >001 Cube</a
                >
                <a href="/002" class="hover:text-black transition-colors"
                    >002 Gradient</a
                >
                <a href="/003" class="hover:text-black transition-colors"
                    >003 Greeting</a
                >
            </div>
            <div class="flex w-full text-black/50 py-4 relative">
                <a href="https://woreg.in/">@woregin</a>
            </div>
        </div>
    </main>
</Layout>

<style>
    @keyframes pan {
        0% {
            background-position: 0% 0%;
        }
        100% {
            background-position: 100% 100%;
        }
    }
    body {
        background: repeating-linear-gradient(
            45deg,
            #f1f1ef,
            #f1f1ef 10px,
            #d8d8d3 10px,
            #d8d8d3 20px
        );
        background-size: 200% 200%;
        animation: pan 25s linear infinite;
    }
    .overlay {
        position: absolute;
        width: 100%;
        height: 100%;
        left: 0px;
        top: 0px;
        background: radial-gradient(circle, transparent 75%, #f1f1ef);
        z-index: 10;
    }
</style>
